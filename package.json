    "@remix-run/react": "^1.15.0",
    "@remix-run/vercel": "^1.15.0",
    "@vercel/analytics": "^0.1.11",
    "@vercel/remix": "^1.15.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "fireworks-js": "^2.10.2",
    "gsap": "^3.11.5",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.15.0",
