    "@testing-library/user-event": "^14.4.3",
    "@types/gtag.js": "^0.0.12",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.0",
    "eslint": "^8.38.0",
