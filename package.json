{
  "name": "portfolio-remix",
  "description": "The online portfolio of Matthew Scholta, a Software Engineer!",
  "engines": {
    "node": ">=14"
  },
  "license": "",
  "private": true,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles --env production",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "postcss styles/*.css --base styles --dir app/styles -w",
    "postinstall": "remix setup node",
    "test": "NODE_ENV=test TZ=UTC vitest",
    "test:coverage": "NODE_ENV=test TZ=UTC vitest run --coverage"
  },
  "sideEffects": false,
  "type": "commonjs",
  "dependencies": {
    "@fireworks-js/react": "^2.10.4",
    "@graphcms/rich-text-react-renderer": "^0.6.1",
